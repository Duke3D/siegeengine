<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.7//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>SiegeEngine</name>
	<creationDate>July, 2012</creationDate>
	<author>Antony Doyle</author>
	<authorEmail>antony@siege21.com</authorEmail>
	<authorUrl>http://www.antonydoyle.co.uk</authorUrl>
	<copyright>Copyright (C) 2012 Antony Doyle | Siege21.com | Siegeworks. All rights Reserved</copyright>
	<license>GNU General Public License version 2 or later</license>
	<version>1.2</version>	
	<description>
	TPL_SIEGEENGINE_DESCRIPTION
		</description>
		
	<files>
        <filename>index.php</filename>
		<filename>framework.php</filename>
        <filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>js</folder>
	</files>
	
	<positions>
		<position>menu</position>
		<position>slideshow</position>
		<position>orbit</position>
		<position>logo</position>
		<position>top1</position>
		<position>top2</position>
		<position>top3</position>
		<position>above1</position>
		<position>above2</position>
		<position>above3</position>
		<position>right</position>
		<position>below1</position>
		<position>below2</position>
		<position>below3</position>
		<position>bottom1</position>		
		<position>bottom2</position>
		<position>bottom3</position>
		<position>footer1</position>		
		<position>footer2</position>
		<position>footer3</position>
		<position>footerTop1</position>		
		<position>footerTop2</position>
		<position>footerTop3</position>
		<position>footerTop4</position>
		<position>debug</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_siegeengine.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_siegeengine.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="Customise Joomla! output" label="Customise Joomla! output" addfieldpath="/templates/siegeengine/" >
				<field name="loadMoo" type="radio" default="0" label="Load MooTools?" description="Load the MooTools JavaScript library that is included with Joomla? If it is not in use you can save a lot of Kb by not loading it. Setting this to no will also disable caption.js">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
<field name="jQuery" type="radio" default="1" label="Load jQuery?" description="Load jQuery library? If you're already using jQuery in another extension and cannot turn it off you can turn it off here. Set to load as default.">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field type="spacer" default=" " />	
				<field type="spacer" default=" " />
					<field name="setGeneratorTag" type="text" default="" label="Generator Meta Tag" description="Customise the generator meta tag output by your template." size="85" />
					<field name="analytics" type="text" default="UA-XXXXX-X" label="Google Analytics ID" description="Change UA-XXXXX-X to be your site's ID" size="15" />
					<field name="menuModTitle" type="text" default="MenuModule" label="Menu Mod Title" description="Change UA-XXXXX-X to be your site's ID" size="15" />
					<field name="customCSS" type="filelist" default="" label="Load a Custom CSS file" description="" directory="templates/siegeengine/css/" filter="" exclude="foundation\.css|templateCore\.css" stripext="" />
					<field name="logoUp" type="radio" default="1" label="Logo Selector" description="Select to use a module position or the upload box below for the logo">
					<option value="1">Select box</option>
					<option value="0">Module Position</option>
				</field>
					<field name="custLogo" label="Load a Custom Logo" type="media" directory="stories" />
			</fieldset>	
			
			<fieldset name="Foundation Options" label="Foundation Options" addfieldpath="/templates/siegeengine/" >
							<field type="spacer" default=" " label="*Note* Selecting Load minified Foundation.js will unload all of the individual .js files. If you are using individual .js files, you MUST load jQuery!"/>
<field type="spacer" default=" " />
				<field name="unOrbit" type="radio" default="1" label="Load Orbit.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>

				<field name="unReveal" type="radio" default="1" label="Load reveal.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
				<field name="unNav" type="radio" default="1" label="Load navigation.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>			
				<field name="unButt" type="radio" default="1" label="Load buttons.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
								<field name="unTabs" type="radio" default="1" label="Load tabs.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
								<field name="unForms" type="radio" default="1" label="Load forms.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
								<field name="unTooltips" type="radio" default="1" label="Load tooltips.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
								<field name="unAccord" type="radio" default="1" label="Load accordion.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
								<field name="unPlaceholder" type="radio" default="1" label="Load placeholder.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
								<field name="unAlerts" type="radio" default="1" label="Load alerts.js" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>
					<field name="minFound" type="radio" default="0" label="Load minified foundry.js (disables all options above)" description="">
					<option value="1">Yes</option>
					<option value="0">No</option>
				</field>	
			</fieldset>					
		</fields>
	</config>
</extension>